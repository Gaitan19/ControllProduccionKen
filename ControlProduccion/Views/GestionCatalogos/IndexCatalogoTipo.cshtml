@using ControlProduccion.ViewModel;
@model IEnumerable<CatalogoTipoViewModel>;
@{
    ViewData["Title"] = "Catalogo Tipo";
}

<div class="col-md-11 offset-md-1">
    <h2 class="text-center">Catalogo Tipo</h2>
    <div class="ibox">
        <div class="ibox-title">
            <div class="col-sm-8">
                <a asp-controller="GestionCatalogos" asp-action="CreateCatalogoTipo" id="btnAdd" class="btn btn-info btn-outline">
                    <i class="fa fa-plus"></i> Agregar
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <table id="tblCatalogoTipo" class="table tdatatable table-bordered">
                <thead>
                    <tr>
                        <th>Descripcion</th>
                        <th>Activo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ct in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="EditCatalogoTipo" asp-route-id="@ct.Id">
                                    @ct.Descripcion
                                </a>
                            </td>
                            <td>
                                @if (ct.Activo)
                                {
                                    <span class="badge badge-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Inactivo</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Aquí puedes agregar scripts adicionales según sea necesario
    </script>
}