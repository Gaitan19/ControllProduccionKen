@using ControlProduccion.ViewModel;
@model PrdMallaPchViewModel;
@{
    ViewData["Title"] = "Editar Produccion Malla PCH";
}

<div class="col-md-10 offset-md-1">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>@ViewData["Title"]</h5>
        </div>
        <div class="ibox-content">
            <form id="frmProduccion" method="post" asp-action="Edit" autocomplete="off">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <input type="hidden" asp-for="Id" />
                @if (Model.AprobadoGerencia == true)
                {
                    <div class="alert alert-success">
                        <i class="fa fa-check"></i> Esta producción ha sido aprobada y no puede ser modificada.
                    </div>
                }
                <div class="form-group">
                    <label asp-for="IdUsuarios"></label>
                    <select id="IdUsuarios" multiple name="IdUsuarios" asp-for="IdUsuarios" class="form-control select2" asp-items="Model.Operarios">
                    </select>
                    <span asp-validation-for="IdUsuarios" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Fecha"></label>
                    <input asp-for="Fecha" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TiempoParo"></label>
                    <input asp-for="TiempoParo" type="number" step="0.1" min="0" class="form-control" />
                    <span asp-validation-for="TiempoParo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProduccionTotal"></label>
                    <input asp-for="ProduccionTotal" class="form-control" readonly />
                    <span asp-validation-for="ProduccionTotal" class="text-danger"></span>
                </div>

                <div class="hr-line-dashed"></div>

                <!-- Sección Máquina A -->
                <div class="form-group row">
                    <div class="col-sm-12" style="max-height: 300px; overflow-y: auto">
                        <h4>Detalle Máquina A - Hilos Transversales</h4>
                        <table id="tblDetalleA" class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th style="display:none" data-field="id">Id</th>
                                    <th data-field="no">No.</th>
                                    <th data-field="maquina">Máquina</th>
                                    <th data-field="hilosTransversales">Hilos Transversales (un)</th>
                                    <th data-field="mermaHilos">Merma Hilos Transversales (kg)</th>
                                    <th data-field="tipoFabricacion">Tipo Fabricación</th>
                                    <th data-field="numeroPedido">N° Pedido</th>
                                    <th data-field="longitud">Longitud (m)</th>
                                    <th data-field="cantidad">Cantidad (un)</th>
                                    <th data-field="produccion">Producción (Mts)</th>
                                    <th data-field="numeroAlambre">N° Alambre A</th>
                                    <th data-field="pesoAlambre">Peso Alambre A (kg)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.DetPrdPchMaquinaAs != null)
                                {
                                    int counterA = 1;
                                    @foreach (var detalle in Model.DetPrdPchMaquinaAs)
                                    {
                                        var maquinaNombre = Model.Maquinas?.FirstOrDefault(m => m.Value == detalle.IdMaquina.ToString())?.Text ?? "";
                                        var tipoFabricacionNombre = Model.TiposFabricacion?.FirstOrDefault(t => t.Value == detalle.IdTipoFabricacion.ToString())?.Text ?? "";
                                        <tr>
                                            <td style="display:none" data-field="id">@detalle.DetPrdPchMaquinaAId</td>
                                            @if (Model.AprobadoGerencia != true)
                                            {
                                                <td data-field="no"><a href="#" class="open-modal-a">@counterA</a></td>
                                            }
                                            else
                                            {
                                                <td data-field="no"><a>@counterA</a></td>
                                            }
                                            <td data-field="maquina">@maquinaNombre</td>
                                            <td data-field="hilosTransversales">@detalle.HilosTransversalesUn</td>
                                            <td data-field="mermaHilos">@detalle.MermaHilosTransversalesKg</td>
                                            <td data-field="tipoFabricacion">@tipoFabricacionNombre</td>
                                            <td data-field="numeroPedido">@detalle.NumeroPedido</td>
                                            <td data-field="longitud">@detalle.Longitud</td>
                                            <td data-field="cantidad">@detalle.Cantidad</td>
                                            <td data-field="produccion">@detalle.Produccion</td>
                                            <td data-field="numeroAlambre">@detalle.NumeroAlambreA</td>
                                            <td data-field="pesoAlambre">@detalle.PesoAlambreKgA</td>

                                            <td style='display:none;' data-field="idMaquina">@detalle.IdMaquina</td>
                                            <td style='display:none;' data-field="idTipoFabricacion">@detalle.IdTipoFabricacion</td>
                                        </tr>
                                        counterA++;
                                    }
                                }
