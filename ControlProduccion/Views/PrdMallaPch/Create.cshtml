@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // ─────────── AUTOSAVE / RESTORE /PREVENT EXIT ───────────
            const DRAFT_KEY = 'draft-prdMallaPch';

            function backupForm() {
                const formArr = $('#frmProduccion').serializeArray();
                const detalleAHtml = $('#tblDetalleA tbody').html();
                const detalleBHtml = $('#tblDetalleB tbody').html();
                const detalleCHtml = $('#tblDetalleC tbody').html();
                localStorage.setItem(DRAFT_KEY,
                    JSON.stringify({ 
                        form: formArr, 
                        detalleAHtml: detalleAHtml,
                        detalleBHtml: detalleBHtml,
                        detalleCHtml: detalleCHtml
                    })
                );
            }

            function restoreIfExists() {
                const draftStr = localStorage.getItem(DRAFT_KEY);
                if (!draftStr) return;

                if (confirm('Se encontró un borrador sin guardar. ¿Deseas restaurarlo?')) {
                    const draft = JSON.parse(draftStr);

                    // Agrupar valores por nombre de campo
                    const formMap = draft.form.reduce((acc, { name, value }) => {
                        acc[name] = acc[name] || [];
                        acc[name].push(value);
                        return acc;
                    }, {});

                    // Restaurar cada campo, usando array para selects múltiples
                    Object.entries(formMap).forEach(([name, values]) => {
                        const $el = $('[name="' + name + '"]');
                        const valToSet = $el.prop('multiple') ? values : values[0];
                        if ($el.hasClass('select2-hidden-accessible')) {
                            $el.val(valToSet).trigger('change');
                        } else {
                            $el.val(valToSet);
                        }
                    });

                    // Restaurar contenido de las tablas
                    if (draft.detalleAHtml) {
                        $('#tblDetalleA tbody').html(draft.detalleAHtml);
                    }
                    if (draft.detalleBHtml) {
                        $('#tblDetalleB tbody').html(draft.detalleBHtml);
                    }
                    if (draft.detalleCHtml) {
                        $('#tblDetalleC tbody').html(draft.detalleCHtml);
                    }
                }
            }

            // Restaura al cargar y luego auto‑respalda cada 30s
            restoreIfExists();
            setInterval(backupForm, 30000);

            // ───────── PREVENT UNLOAD ─────────
            function beforeUnloadHandler(e) {
                const hasRows = $('#tblDetalleA tbody tr').length > 0 || 
                               $('#tblDetalleB tbody tr').length > 0 || 
                               $('#tblDetalleC tbody tr').length > 0;
                const isDirty = $('#frmProduccion').serialize() !== '';
                if (hasRows || isDirty) {
                    e.preventDefault();
                    e.returnValue = '';
                }
            }
            window.addEventListener('beforeunload', beforeUnloadHandler);

            $('#btnRegresar').off('click').on('click', function() {
                const url = $(this).data('url');
                if (confirm('¿Deseas salir sin guardar? Se perderán los datos no guardados.')) {
                    localStorage.removeItem(DRAFT_KEY);
                    window.removeEventListener('beforeunload', beforeUnloadHandler);
                    window.location.href = url;
                }
            });

            // ──────────END AUTOSAVE / RESTORE /PREVENT EXIT ───────────

            // --- INICIALIZACIÓN SELECT2 EN LA PÁGINA PRINCIPAL ---
            $("#IdUsuarios").select2({
                placeholder: "- Selecciona los operarios -",
                allowClear: true,
                width: '100%'
            });

            // --- MANEJO DE MODALES ---
            $('#modal-DetalleA').on('shown.bs.modal', function() {
                const $modal = $(this);
                const $modalBody = $modal.find('.modal-body');

                // Destruir instancias previas de Select2
                $modal.find('select').each(function() {
                    if ($(this).data('select2')) {
                        $(this).select2('destroy');
                    }
                });

                // Reinicializar Select2
                $modal.find('select').select2({
                    dropdownParent: $modalBody,
                    allowClear: true,
                    width: '100%'
                });

                //setear id 17 para select maquina de este modal
                $('#IdMaquinaA').val(17).trigger('change');
                        var $sel = $('#IdMaquinaA');
                        var name = $sel.attr('name');
                        // crea el hidden con el valor actual
                        $('<input>', { type: 'hidden', name: name, value: $sel.val() }).insertAfter($sel);
                        // deshabilita el select (solo lectura visual y funcional)
                        $sel.prop('disabled', true);
            });

            $('#modal-DetalleB').on('shown.bs.modal', function() {
                const $modal = $(this);
                const $modalBody = $modal.find('.modal-body');

                $modal.find('select').each(function() {
                    if ($(this).data('select2')) {
                        $(this).select2('destroy');
                    }
                });

                $modal.find('select').select2({
                    dropdownParent: $modalBody,
                    allowClear: true,
                    width: '100%'
                });

                 //setear id 18 para select maquina de este modal
                 $('#IdMaquinaB').val(18).trigger('change');
                   var $sel = $('#IdMaquinaB');
                        var name = $sel.attr('name');
                        // crea el hidden con el valor actual
                        $('<input>', { type: 'hidden', name: name, value: $sel.val() }).insertAfter($sel);
                        // deshabilita el select (solo lectura visual y funcional)
                        $sel.prop('disabled', true);
            });

            $('#modal-DetalleC').on('shown.bs.modal', function() {
                const $modal = $(this);
                const $modalBody = $modal.find('.modal-body');

                $modal.find('select').each(function() {
                    if ($(this).data('select2')) {
                        $(this).select2('destroy');
                    }
                });

                $modal.find('select').select2({
                    dropdownParent: $modalBody,
                    allowClear: true,
                    width: '100%'
                });

                 //setear id 7 para select maquina de este modal
                    $('#IdMaquinaC').val(7).trigger('change');
                     var $sel = $('#IdMaquinaC');
                        var name = $sel.attr('name');
                        // crea el hidden con el valor actual
                        $('<input>', { type: 'hidden', name: name, value: $sel.val() }).insertAfter($sel);
                        // deshabilita el select (solo lectura visual y funcional)
                        $sel.prop('disabled', true);
            });

            // Eventos 'change' para TipoFabricacion en cada modal
            $(document).on('change', '#IdTipoFabricacionA', function(){
                if($(this).val() == 2) {
                    $('#divNumeroPedidoA').show();
                } else {
                    $('#divNumeroPedidoA').hide();
                    $('#NumeroPedidoA').val('');
                }
            });

            $(document).on('change', '#IdTipoFabricacionB', function(){
                if($(this).val() == 2) {
                    $('#divNumeroPedidoB').show();
                } else {
                    $('#divNumeroPedidoB').hide();
                    $('#NumeroPedidoB').val('');
                }
            });

            $(document).on('change', '#IdTipoFabricacionC', function(){
                if($(this).val() == 2) {
                    $('#divNumeroPedidoC').show();
                } else {
                    $('#divNumeroPedidoC').hide();
                    $('#NumeroPedidoC').val('');
                }
            });

            // Botones Guardar de los modales
            $('#btnGuardarDetPrdA').click(function(){
                $('#spnbtnGuardarDetPrdA').text('');

                // Obtener valores
                var idMaquina = $('#IdMaquinaA').val();
                var hilosTransversales = $('#HilosTransversalesUn').val();
                var mermaHilos = $('#MermaHilosTransversalesKg').val();
                var idTipoFabricacion = $('#IdTipoFabricacionA').val();
                var numeroPedido = $('#NumeroPedidoA').val();
                var longitud = $('#LongitudA').val();
                var cantidad = $('#CantidadA').val();
                var numeroAlambre = $('#NumeroAlambreA').val();
                var pesoAlambre = $('#PesoAlambreKgA').val();

                // Validaciones básicas
                if(!idMaquina || !hilosTransversales || !mermaHilos || !idTipoFabricacion || 
                   !longitud || !cantidad || !numeroAlambre || !pesoAlambre){
                    $('#spnbtnGuardarDetPrdA').text('Complete todos los campos obligatorios.');
                    return;
                }

                if(idTipoFabricacion == 2 && !numeroPedido){
                    $('#spnbtnGuardarDetPrdA').text('El número de pedido es obligatorio para el tipo "Por Pedido".');
                    return;
                }

                // Obtener textos para mostrar
                var maquinaText = $('#IdMaquinaA option:selected').text();
